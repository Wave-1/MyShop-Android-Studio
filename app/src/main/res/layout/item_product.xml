<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <!-- Sử dụng LinearLayout làm gốc, đơn giản và hiệu quả hơn -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <!-- ⭐ SỬA LỖI: Dùng FrameLayout để bao bọc ImageView và TextView Sale -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 1. Hình ảnh sản phẩm -->
            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:scaleType="fitCenter"
                tools:src="@mipmap/ic_launcher" />

            <!-- 2. TextView cho phần trăm giảm giá -->
            <TextView
                android:id="@+id/tvSalePercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:background="@drawable/bg_sale_percentage"
                android:paddingStart="8dp"
                android:paddingTop="3dp"
                android:paddingEnd="8dp"
                android:paddingBottom="3dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="-50%"
                tools:visibility="visible" />

        </FrameLayout>

        <!-- Khối chứa text info, nằm trong một LinearLayout riêng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp">

            <!-- Tên sản phẩm -->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:minLines="2"
                android:text="Tên sản phẩm"
                android:textColor="#222222"
                android:textSize="14sp" />

            <!-- Layout chứa Giá và Số lượng bán -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <!-- Giá sản phẩm -->
                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="100.000 ₫"
                    android:textColor="@color/holo_red_light"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <!-- Số lượng đã bán -->
                <TextView
                    android:id="@+id/tvSalesCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableStart="@drawable/ic_local_fire_department"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:text="Đã bán 123"
                    android:textColor="#666666"
                    android:textSize="12sp" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
