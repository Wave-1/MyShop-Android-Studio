<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1C2A44"
            android:padding="10dp">

            <EditText
                android:id="@+id/edtSearch"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/search_bg"
                android:drawableLeft="@android:drawable/ic_menu_search"
                android:drawablePadding="6dp"
                android:hint="Tìm kiếm sản phẩm"
                android:padding="10dp"
                android:textColor="#000"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnSearch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:backgroundTint="#FF6F00"
                android:minWidth="60dp"
                android:text="Tìm"
                android:textColor="#FFF"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Thanh filter ngang -->
        <HorizontalScrollView
            android:id="@+id/filterScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:background="#FFFFFF"
            android:overScrollMode="never">

            <LinearLayout
                android:id="@+id/layoutFilters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:divider="@drawable/divider_line"
                android:showDividers="middle"
                android:dividerPadding="8dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp">

                <Button
                    android:id="@+id/btnFilterAll"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/filter_button_selector"
                    android:text="Tất cả"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingHorizontal="16dp"
                    android:stateListAnimator="@null"
                    android:foreground="?attr/selectableItemBackground"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"/>

                <Button
                    android:id="@+id/btnFilterNew"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Mới nhất"
                    android:background="@drawable/filter_button_selector"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingHorizontal="16dp"
                    android:stateListAnimator="@null"
                    android:foreground="?attr/selectableItemBackground"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"/>

                <Button
                    android:id="@+id/btnFilterHot"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Bán chạy"
                    android:background="@drawable/filter_button_selector"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingHorizontal="16dp"
                    android:stateListAnimator="@null"
                    android:foreground="?attr/selectableItemBackground"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"/>

                <!-- Sắp xếp theo giá -->
                <Button
                    android:id="@+id/btnSortPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Giá ▼"
                    android:background="@drawable/filter_button_selector"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingHorizontal="16dp"
                    android:stateListAnimator="@null"
                    android:foreground="?attr/selectableItemBackground"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"/>

                <!-- Danh mục -->
                <Button
                    android:id="@+id/btnCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Danh mục ▼"
                    android:background="@drawable/filter_button_selector"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingHorizontal="16dp"
                    android:stateListAnimator="@null"
                    android:foreground="?attr/selectableItemBackground"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"/>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Nội dung chính -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollMain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="90dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <!-- Kết quả tìm kiếm -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerSearchResults"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:paddingTop="8dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
