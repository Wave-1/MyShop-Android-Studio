<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:ignore="ContentDescription,UseCompoundDrawables">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:ignore="Autofill">

        <!-- Toolbar (có thể tùy chỉnh tiêu đề tại layout_toolbar.xml) -->
        <include layout="@layout/layout_toolbar" />

        <!-- Nội dung chính -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/define_dimen_18">

            <!-- Logo ứng dụng -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logo"
                tools:ignore="ContentDescription" />

            <!-- Mật khẩu cũ -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_20"
                android:text="Mật khẩu cũ"
                android:textColor="@color/textColorHeading"
                android:textSize="@dimen/text_size_xsmall" />

            <EditText
                android:id="@+id/edt_old_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_5"
                android:background="@drawable/bg_white_corner_16_border_gray"
                android:hint="Nhập mật khẩu cũ"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:padding="@dimen/define_dimen_14"
                android:textColor="@color/textColorHeading"
                android:textColorHint="@color/textColorAccent"
                android:textSize="@dimen/text_size_small" />

            <!-- Mật khẩu mới -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_12"
                android:text="Mật khẩu mới"
                android:textColor="@color/textColorHeading"
                android:textSize="@dimen/text_size_xsmall" />

            <EditText
                android:id="@+id/edt_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_5"
                android:background="@drawable/bg_white_corner_16_border_gray"
                android:hint="Nhập mật khẩu mới"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:padding="@dimen/define_dimen_14"
                android:textColor="@color/textColorHeading"
                android:textColorHint="@color/textColorAccent"
                android:textSize="@dimen/text_size_small" />

            <!-- Xác nhận mật khẩu -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_12"
                android:text="Xác nhận mật khẩu mới"
                android:textColor="@color/textColorHeading"
                android:textSize="@dimen/text_size_xsmall" />

            <EditText
                android:id="@+id/edt_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_5"
                android:background="@drawable/bg_white_corner_16_border_gray"
                android:hint="Nhập lại mật khẩu mới"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:padding="@dimen/define_dimen_14"
                android:textColor="@color/textColorHeading"
                android:textColorHint="@color/textColorAccent"
                android:textSize="@dimen/text_size_small" />

            <!-- Nút xác nhận -->
            <Button
                android:id="@+id/btn_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_30"
                android:text="Thay đổi mật khẩu"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:backgroundTint="@color/pink"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
