<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayoutAdmin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- 🔹 Thanh tiêu đề -->
    <TextView
        android:id="@+id/tvAdminTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📦 Quản lý sản phẩm"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1C2A44"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="12dp"
        android:background="#FFFFFF"
        android:elevation="3dp" />

    <!-- 🔸 Thanh tìm kiếm -->
    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_search_box"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="80dp"
        android:padding="8dp"
        android:elevation="2dp">

        <EditText
            android:id="@+id/edtSearchAdmin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="🔍 Nhập tên sản phẩm..."
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/btnSearchAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"
            android:contentDescription="Tìm sản phẩm"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#1C2A44" />
    </LinearLayout>

    <!-- 🧾 Danh sách sản phẩm -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerProductsAd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        android:paddingHorizontal="10dp"
        android:paddingBottom="90dp"
        android:scrollbars="vertical"
        android:clipToPadding="false" />

    <!-- ➕ Nút thêm sản phẩm -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddProductAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="90dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="#4CAF50"
        app:tint="@android:color/white"
        android:contentDescription="Thêm sản phẩm mới" />

    <!-- 🔻 Thanh điều hướng -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:menu="@menu/bottom_nav_admin" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
