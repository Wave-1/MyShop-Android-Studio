<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.MyShop" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Màu chủ đạo (nếu bạn muốn thay đổi sau này) -->
<!--         <item name="colorPrimary">@color/lightGrey</item>-->

        <!-- Làm status bar trong suốt -->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- Giữ cho status bar hiển thị -->
        <item name="android:windowFullscreen">false</item>

        <!-- Bật chế độ vẽ dưới system bar nhưng vẫn chừa vùng an toàn -->
        <item name="android:windowTranslucentStatus">true</item>

        <!-- Nền tổng thể của Activity -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Đảm bảo thanh điều hướng không bị ẩn -->
        <item name="android:windowLightStatusBar">false</item> <!-- false = chữ trắng -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Kế thừa theme này trong AndroidManifest -->
    <style name="Theme.MyShop" parent="Base.Theme.MyShop" />

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/lightGrey</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>
    <!-- Base Style cho các nút filter -->
    <style name="FilterButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item> <!-- Chiều cao nhỏ hơn -->
        <item name="android:textColor">#555555</item> <!-- Màu chữ khi không chọn -->
        <item name="android:backgroundTint">#F0F0F0</item> <!-- Màu nền khi không chọn -->
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">0dp</item> <!-- Bỏ viền -->
        <item name="cornerRadius">20dp</item> <!-- Bo tròn -->
    </style>

    <!-- Style cho nút filter khi được chọn -->
    <style name="FilterButton.Selected">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/purple_500</item> <!-- Màu nền khi được chọn -->
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CleanFilterButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/filter_button_selector</item>
        <item name="android:textColor">@color/filter_text_color_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

